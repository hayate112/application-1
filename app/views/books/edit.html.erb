<edit>
  <h1>Editing Book</h1>
  <%= form_with model:@book, local: true do |f| %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
  <% end %>
  <p><%= link_to "Show", book_path(@book) %></p>
  <p><%= link_to "Back", books_path(@books) %></p>
</edit>

